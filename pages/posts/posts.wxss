swiper{
  height: 600rpx;
  margin-bottom: 20px;
}
swiper image{
  width: 100%;
  height: 100%;
}

.post-content{
  padding: 5px 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  background: #fff;
  margin-top: 10px;
}
.post-content:first-child{
  margin-top: 0;
}
.post-user{
  margin: 0 10px;
}
.post-user image{
  width: 30px;
  height:30px;
  vertical-align: middle;
  margin-right: 10px;
}
.post-user text.date{
  font-size:14px;
  vertical-align: middle
}
.post-user view.user-name{
  margin-bottom: 5px;
}
.post-user view.user-name text{
  font-size: 14px;
}
.post-img{
  width:100%;
  height: 460rpx;
}
.post-img image{
  width: 100%;
  height: 100%;
}
.post-text{
  padding: 0 10px;
}
.post-text text{
  font-size: 14px;
}
.post-condition{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 10px;
}
.post-condition image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 5px;
}
.post-condition text{
  font-size: 12px;
}
